#!/bin/bash

depends_on libgstreamer
depends_on libasound
depends_on libvorbis
depends_on libsm

fetch_source http://http.debian.net/debian/pool/main/g/gst-plugins-base0.10/gst-plugins-base0.10_0.10.36.orig.tar.bz2 e675401b62a6bf2e5ea966e833afd005a585e978
fetch_debian http://http.debian.net/debian/pool/main/g/gst-plugins-base0.10/gst-plugins-base0.10_0.10.36-2.debian.tar.xz b3ec7e6753057c53ccd1e908e00e329b1f13d24c

EXTRAFLAGS=
cc_addflag EXTRAFLAGS -march=native -msse2 -msse

CPPFLAGS="$CPPFLAGS $EXTRAFLAGS" do_undebian_compile
