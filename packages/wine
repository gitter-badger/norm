#!/bin/bash

depends_on flex bison
depends_on libx11
depends_on libasound
depends_on freetype

fetch_source http://prdownloads.sourceforge.net/wine/wine-1.7.50.tar.bz2 fef9e2e54dca8fe783ece06f153a62d7a5d48ce3

unset CONFOPTS
if [[ $HOSTTYPE == x86_64 ]]; then
    CONFOPTS="--enable-win64"
    add_caveat "64-bit version of Wine will run only 64-bit windows executables."
fi

do_unpack_compile $CONFOPTS
